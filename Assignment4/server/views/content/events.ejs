<h1 class="mt-3 text-center">Official Events</h1>


<div class="container">
    <div class="mt-3 mb-3 ms-1 me-2 d-flex justify-content-between">
        <div class="dropdown" >
            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="eventsDropdownButton"
                    data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-filter"></i> Filter Events
            </button>
            <ul class="dropdown-menu" aria-labelledby="eventsDropdownButton">
                <li><a class="dropdown-item" href="#">Upcoming</a></li>
                <li><a class="dropdown-item" href="#">Past</a></li>
                <li><a class="dropdown-item" href="#">All</a></li>
            </ul>
        </div>
        <a href="/event_planning" class="btn btn-primary btn-sm">
            <i class="fa-regular fa-calendar-plus"></i> Plan A Community Event
        </a>
    </div>

    <div class="row g-1" id="events-container">
        <% events.forEach(event => { %>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 d-flex">
                <div class="card" style="margin: 5px; width: 18rem; position: relative;">
                    <img class="card-img-top" src="<%= event.eventImage %>" alt="<%= event.eventName %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= event.eventName %></h5>
                        <p class="card-text">Date: <%= formatDate(event.eventDate) %></p>
                        <p class="card-text">Location: <%= event.eventLocation %></p>
                        <p class="card-text"><%= event.eventDescription %></p>
<!--                        <i class="far fa-heart heart-icon" style="cursor: pointer; position: absolute; bottom: 8px; right: 10px; color: red;"></i>-->
<!--                        <span class="like-counter" style="position: absolute; bottom: 5px; right: 30px; color: black">-->
<!--                    <= event.eventLikeCount >-->
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>