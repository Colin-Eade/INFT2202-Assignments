<h1 class="mt-3 text-center">Edit Profile</h1>

<div class="row justify-content-center mt-3">
    <div class="col-12">
        <div class="card bg-body-tertiary border-0">
            <div class="card-header border-0 d-flex justify-content-between">
                <h3>Profile</h3>
            </div>
            <div class="row card-body">
                <form method="post">
                    <div class="two-col-grid-lg">
                        <input type="hidden" name="id" value="<%= user._id %>"> <div>
                            <h5>New Username</h5>
                            <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>">
                        </div>
                        <div>
                            <h5>New Display Name</h5>
                            <input type="text" class="form-control" id="displayName" name="displayName" value="<%= user.displayName %>">
                        </div>
                        <div>
                            <h5>New Email Address</h5>
                            <input type="email" class="form-control" id="emailAddress" name="emailAddress" value="<%= user.emailAddress %>">
                        </div>
                        <div>
                            <h5>
                                New Password
                                <span class="text-muted" style="font-size: 0.8rem;">
                                    (Leaving this empty will keep your current password)
                                </span>
                            </h5>
                            <input type="password" class="form-control" id="password" name="password" value="">
                        </div>
                        <div>
                            <h5>New Phone Number</h5>
                            <input type="tel" class="form-control" id="phone" name="phone" value="<%= user.phone %>">
                        </div>
                        <div>
                            <h5>New Address</h5>
                            <input class="form-control" id="address" name="address" value="<%= user.address %>">
                        </div>
                        <div class="mb-3">
                            <h5>New Birthday</h5>
                            <input type="date" class="form-control" id="birthday" name="birthday" value="<%= user.birthday.toISOString().split('T')[0] %>">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Save Changes</button>
                    <a type="button" href="/dashboard" class="btn btn-primary"><i class="fa-solid fa-arrow-rotate-left"></i> Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>